<div class="container text-center show-box">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-style">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Enter email" %>
    <%= f.input :password, required: true, label: false, placeholder: "Enter password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), hint_html: {class: 'form-text small'} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<br>
<%= render "customers/shared/links" %>
</div>
